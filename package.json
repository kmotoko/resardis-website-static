{
  "name": "resardis-website-static",
  "version": "0.4.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn cleanup && yarn build:modernizr && yarn build:webpack && yarn build:jekyll",
    "build:webpack": "NODE_ENV=production yarn webpack",
    "build:modernizr": "NODE_ENV=production yarn modernizr -c modernizr-config.json -d _src/js/modernizr.js",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build --strict_front_matter --trace",
    "test:jekyll": "yarn cleanup && yarn build:modernizr && yarn build:webpack && JEKYLL_ENV=production bundle exec rake test",
    "serve:jekyll": "yarn cleanup && yarn build:modernizr && yarn build:webpack && JEKYLL_ENV=development bundle exec jekyll serve",
    "lint:css": "yarn stylelint '**/*.css'",
    "lint:css:fix": "yarn stylelint '**/*.css' --fix",
    "lint:scss": "yarn stylelint '**/*.scss'",
    "lint:scss:fix": "yarn stylelint '**/*.scss' --fix",
    "lint:js": "yarn eslint .",
    "lint:js:fix": "yarn eslint --fix .",
    "cleanup": "rm -rvf ./build/ ./_site/ ./assets/"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.7.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "bootstrap.native-loader": "^2.0.0",
    "browserslist": "^4.7.3",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "bootstrap.native": "^2.0.27",
    "core-js": "3",
    "lazysizes": "^5.1.2",
    "modernizr": "^3.8.0"
  }
}
